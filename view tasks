		<script>
			$(document).ready(function (){
			

				$.ajax({
						url  : 'auth.php',
						success:  function(data)
						{
							$('input[type="hidden"]').val(data);
							var re= $('input[type="hidden"]').val();

							if(re !== "ok"){
								window.location.replace("index");
								}
							}
						});



			$.ajax({
		   
		   url  : 'view tasks.php',
		  
		   success :  function(data)
		   {
		  $('#table').html(data);
		   }
		
			});
			});



		

